package stream;

import java.util.Arrays;
import java.util.List;
import java.util.Optional;
import java.util.stream.Collectors;
import java.util.stream.Stream;

public class PersonDemo {
	public static void main(String[] args) {
		Person p1 = new Person("Sanket", "India");
		Person p2 = new Person("John","USA");
		Person p3 = new Person("Rohan","Canada");
		Person p4 = new Person("Akash","Uk");
		Person p5 = new Person("Nikita","India");
		
		Stream<Person> person= Stream.of(p1,p2,p3,p4);
		
		Stream<Person> person2= Stream.of(p1,p2,p3,p4);
		
		Stream<Person> person3= Stream.of(p1,p2,p3,p4);
		
		// Check the person of certain country is matches/present or not
		boolean check_result = person.anyMatch(p -> p.getCountry().equals("Canada"));
		System.out.println("The result of your question is : "+check_result);
		
		// check all persons are from USA
		boolean check_result2 = person2.allMatch(p -> p.getCountry().equals("USA"));
		System.out.println("The result of your question is : "+check_result2);
		
		// check all persons are from USA
		boolean check_result3 = person3.noneMatch(p -> p.getCountry().equals("Nepal"));
		System.out.println("The result of your question is : "+check_result3);
		System.out.println("--------------------------------------");
		
		// find the first person which is from india
		
		List<Person> list = Arrays.asList(p1,p2,p3,p4,p5);
		
		Optional<Person> person_ =list.stream().filter(p->p.getCountry().equals("India")).findFirst();
		
		// Optional is used to handle null values
		// we have to provide the null checks
		if(person_.isPresent())
		{
		 System.out.println(person_.get());
		}
		
		System.out.println("-----------------------------------------");
		// print the list of the indian's
		
		List<Person> indians = list.stream()
				.filter(p->p.getCountry().equals("India"))
				.collect(Collectors.toList());
		
		indians.forEach(i -> System.out.println(i));
		
		
		// collect the names of the person from india and store into the names collection.
		List<Person> names = Arrays.asList(p1,p2,p3,p4,p5);
		
		System.out.println("-------------------");
		
		List<String> names_list = names.stream()
				.filter(p -> p.getCountry().equals("India"))
				.map(p -> p.getName())
			.collect(Collectors.toList());
		
		System.out.println(names_list);
			
		
	}
}


class Person{
	
	private String name;
	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public String getCountry() {
		return country;
	}

	public void setCountry(String country) {
		this.country = country;
	}

	private String country;
	
	@Override
	public String toString() {
		return "Person [name=" + name + ", country=" + country + "]";
	}

	public Person(String name, String country) {
		super();
		this.name = name;
		this.country = country;
	}	
}
